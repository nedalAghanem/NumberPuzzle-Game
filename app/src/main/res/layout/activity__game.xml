<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Game">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_game_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/Regester_activity_margin_Rigth_left"
            android:background="@drawable/shap_size_radius_et"
            android:padding="@dimen/Game_activity_margin_between"
            android:text="Score 0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Regester_activity_margin_Rigth_left"
            android:layout_marginTop="@dimen/Game_activity_margin_between"
            android:layout_marginRight="@dimen/Regester_activity_margin_Rigth_left"
            android:layout_marginBottom="@dimen/Game_activity_margin_between"
            android:text="Welcome . . ."
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_game_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Regester_activity_margin_Rigth_left"
                android:layout_marginTop="@dimen/Game_activity_margin_between"
                android:layout_marginRight="@dimen/Regester_activity_margin_Rigth_left"
                android:layout_marginBottom="@dimen/Game_activity_margin_between"
                android:text="Nedal A Ghanem"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/activity_game_tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Regester_activity_margin_between"
                android:layout_marginTop="@dimen/Game_activity_margin_between"
                android:layout_marginRight="@dimen/Regester_activity_margin_Rigth_left"
                android:layout_marginBottom="@dimen/Game_activity_margin_between"
                android:text="[19]"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:rowCount="3">

            <TextView
                android:id="@+id/activity_game_tv_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="10"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="15"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="20"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="25"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="؟؟"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="35"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="40"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="45"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/activity_game_tv_num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="50"
                android:textSize="45sp" />

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Regester_activity_margin_Rigth_left"
            android:layout_marginRight="@dimen/Regester_activity_margin_Rigth_left"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_game_et_enternum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="2"
                android:background="@drawable/shap_size_radius_et"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter a number"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/activity_game_btn_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/shap_size_radius_btn"
                android:padding="4dp"
                android:text="Check"
                android:textAllCaps="false"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_game_btn_newgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/shap_size_radius_btn"
            android:padding="8dp"
            android:text="New game"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />
    </LinearLayout>
</ScrollView>